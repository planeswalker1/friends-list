<% include partials/header.ejs %>

<h1>Friends list</h1>
<p>Enter a friend's name to add to this list</p>
<ul>
  <% friends.forEach(function (friend) { %>
    <li><%= friend %></li>
    <% }); %>
</ul>

<p class="hidden">Please enter a friend's name.</p>

<form action="/addfriend" method="POST">
  <div class="form-group">
    <label for="friend">Friend: </label>
    <input id="friend" type="text" name="friendName" placeholder="Friend's Name">
  </div>
  <button type="submit">Add friend</button>
</form>

